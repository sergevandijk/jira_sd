{
    "extends": ["stylelint-config-standard", "stylelint-config-prettier"],
    "rules": {
        "no-descending-specificity": null,
        "rule-empty-line-before": [
            "always",
            {
                "except": ["first-nested"],
                "ignore": ["after-comment"]
            }
        ],
        "jsd/no-aui-selectors": [true, { "severity": "warning" }]
    },
    "plugins": ["./.stylelint"]
}
