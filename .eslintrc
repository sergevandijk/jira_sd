{
  "extends": [
    "eslint:recommended",
    "plugin:qunit/recommended",
    "plugin:react/recommended",
    "prettier"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "amd": true,
    "qunit": true,
    "mocha": true
  },
  "globals": {
      "ServiceDesk": false
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "es6": true
    }
  },
  "plugins": [
    "prettier",
    "qunit",
    "react-hooks",
    "servicedesk"
  ],
  "rules": {
    "arrow-body-style": [2, "as-needed"],
    "camelcase": 2,
    "consistent-return": 0,
    "curly": 2,
    "dot-notation": 2,
    "eol-last": 0,
    "eqeqeq": 2,
    "handle-callback-err": 0,
    "new-cap": 0,
    "no-alert": 2,
    "no-cond-assign": 2,
    "no-console": 0,
    "no-debugger": 2,
    "no-dupe-class-members": 2,
    "no-dupe-keys": 2,
    "no-else-return": 2,
    "no-empty": 2,
    "no-extend-native": 2,
    "no-extra-boolean-cast": 2,
    "no-extra-bind": 2,
    "no-inner-declarations": 2,
    "no-loop-func": 2,
    "no-mixed-requires": 2,
    "no-multi-spaces": [2, { "ignoreEOLComments": true }],
    "no-multi-assign": 2,
    "no-nested-ternary": 2,
    "no-new": 2,
    "no-redeclare": 2,
    "no-regex-spaces": 2,
    "no-return-assign": 2,
    "no-script-url": 2,
    "no-shadow": 2,
    "no-spaced-func": 2,
    "no-undef": 2,
    "no-underscore-dangle": 0,
    "no-unreachable": 2,
    "no-unused-expressions": 0,
    "no-unused-vars": [
      2,
      {
        "vars": "all",
        "args": "none"
      }
    ],
    "no-use-before-define": 2,
    "no-var": 2,
    "one-var": [2, "never"],
    "prefer-arrow-callback": 2,
    "prefer-const": 2,
    "prefer-rest-params": 2,
    "prefer-spread": 2,
    "prefer-template": 2,
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "space-infix-ops": 2,
    "space-unary-ops": 2,
    "strict": 2,
    "prettier/prettier": 2
  }
}
